<h2> Twitter search term </h2>

<table class="table table-striped">
  <tr>
    <th><%=t :description%></th>
    <th><%=t :keywords%></th>
    <th><%=t :last_search %> </th>
  </tr>
  <tr>
    <td><%= @term.description %></td> 
    <td><%= @term.keywords%></td>
    <td><%= @term.searched_at %></td>
  </tr>
</table>

<% if @tweets %>
  <table class="table table-striped">
  <tr>
    <th><%=t :user%></th>
    <th><%=t :id%></th>
    <th><%=t :text%></th>
    <th><%=t :lang%></th>
    <th><%=t :retweeted%></th>
  </tr>
  <% @tweets.each do |tweet|%>

    <tr>
    <td><%=tweet.username %></td>
    <td><%= tweet.id %></td>
    <td><%= tweet.text %></td> 
    <td><%= tweet.lang %></td> 
    <td><%= tweet.retweet_count %></td>
  </tr>
<%end%>
</table>
<%end%>
